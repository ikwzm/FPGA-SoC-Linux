+		dev_err(&pdev->dev, "devm_kzalloc() error");
+		ret = -ENOMEM;
+                goto error;
+        }
+
+	res = platform_get_resource(pdev, IORESOURCE_MEM, 0);
+	uphy->regs = devm_ioremap(&pdev->dev, res->start, resource_size(res));
